{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news-post",
    "pluralName": "news",
    "displayName": "News"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "CoverImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "Content": {
      "type": "richtext",
      "required": true
    },
    "DatePublished": {
      "type": "date",
      "required": true
    }
  }
}
